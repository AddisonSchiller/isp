<div id="consent-form" class="well">
  <h2>{{content.title}}</h2>
  <hr>
  {{#each-in content.paragraphs as |paragraph text|}}
    <p>{{text}}</p>
  {{/each-in}}
  <hr>
  <div class="form-group">
    {{input type="checkbox" checked=hasGrantedConsent}}
    <span>
      {{content.consentLabel}}
    </span>
  <button class="btn btn-default pull-right btn-primary" disabled={{if hasGrantedConsent '' 'disabled'}} {{action 'grantConsent'}}>
    {{content.buttonLabel}}
  </button>
  </div>
</div>
