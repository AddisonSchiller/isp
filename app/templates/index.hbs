<div class="row">
  <div class="col-md-12">
    <h1> International Situations Project </h1>
    
    <div class="well">
      <p>Enter your <strong>Study ID</strong> and <strong>Participant ID</strong> into the fields below. Please <a href="/contact">contact us</a> if you have any questions.</p>
      <div class="form">
        <div class="form-group">
          <label for="identifier">Study ID</label>
          <div class="form-input">
	    {{input value=studyId}}
	  </div>
        </div>
	<div class="form-group">
          <label for="participant">Participant ID</label>
          <div class="form-input">
	    {{input value=pariticipantId}}
	  </div>
        </div>
        <div class="form-group">	 
          <button class="btn btn-primary" onclick={{action 'submit'}}>Continue >></button>
        </div>
      </div>
    </div>
  </div>
</div>
{{#bs-modal body=false footer=false header=false open=showLanguageSelector}}
  {{#bs-modal-header}}
    <h4> Please choose a language </h4>
  {{/bs-modal-header}}
  {{#bs-modal-body}}
    {{language-picker onPick=(action 'selectLanguage')}}
  {{/bs-modal-body}}
  {{#bs-modal-footer as |footer|}}
    {{#bs-button action=(action "close" target=footer) type="danger"}}Oh no, forget it!{{/bs-button}}
     {{#bs-button buttonType="submit" type="success"}}Yeah!{{/bs-button}}
  {{/bs-modal-footer}}
{{/bs-modal}}
